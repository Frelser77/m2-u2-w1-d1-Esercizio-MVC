@model IEnumerable<MVCTest.Models.Pagamento>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-light">Tutti i pagamenti</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-sm btn-outline-secondary" })

    <div class="row">
        @foreach (MVCTest.Models.Pagamento item in Model)
        {
            <div class="col-md-4">
                <div class="card my-3 rounded-0 border-0 shadow-sm">
                    <div class="card-header fw-bold fs-5">
                        Pagamento @item.PagamentoID
                    </div>
                    <div class="card-body">
                        <p class="card-text">Periodo: @item.PeriodoPagamentoInizio.ToShortDateString() - @item.PeriodoPagamentoFine.ToShortDateString()</p>
                        <p class="card-text">Ammontare: @item.Ammontare</p>
                        <p class="card-text">Tipo: @item.Tipo</p>
                        <p class="card-text">Dipendente ID: @item.DipendenteID</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                @Html.ActionLink("Modifica", "Edit", new { id = item.PagamentoID }, new { @class = "btn btn-sm btn-outline-secondary" })
                                @Html.ActionLink("Dettagli", "Details", new { id = item.PagamentoID }, new { @class = "btn btn-sm btn-outline-secondary" })
                                @Html.ActionLink("Cancella", "Delete", new { id = item.PagamentoID }, new { @class = "btn btn-sm btn-outline-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>