@model MVCTest.Models.Pagamento

@{
    ViewBag.Title = "Pagamenti";
}

<h2 class="text-light">Dettagli del pagamento</h2>
<div class="container">
    <div class="row">
        <div class="col-md-4">

            <div class="card my-3 rounded-0 border-0 shadow-sm">
                <div class="card-header border-0 d-flex align-items-center justify-content-between">
                    <h4>Pagamento</h4>
                    <span class="badge bg-secondary">#@Model.PagamentoID</span>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Dettagli</h5>
                    <p class="card-text fw-semibold">Periodo Inizio: @Model.PeriodoPagamentoInizio.ToShortDateString()</p>
                    <p class="card-text fw-semibold">Periodo Fine: @Model.PeriodoPagamentoFine.ToShortDateString()</p>
                    <p class="card-text fw-semibold">Ammontare: @Model.Ammontare</p>
                    <p class="card-text fw-semibold">Tipo: @Model.Tipo</p>
                    <p class="card-text fw-semibold">Dipendente ID: @Model.DipendenteID</p>
                </div>
                <div class="card-footer border-0 btn-group">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.PagamentoID }, new { @class = "btn btn-outline-secondary hvr" })
                </div>
            </div>

            <div class="mt-3">
                @Html.ActionLink("Torna alla lista", "Index", null, new { @class = "nav-link text-light my-2" })
            </div>
        </div>
    </div>
</div>