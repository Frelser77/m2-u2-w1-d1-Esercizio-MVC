@model MVCTest.Models.Pagamento

@{
    ViewBag.Title = "Details";
}

<h2 class="text-light">Dettagli del pagamento</h2>
<div class="container">
    <div class="row">
        <div class="col-md-4">

            <div class="card my-3 rounded-0 border-0 shadow-sm">
                <div class="card-header">
                    Pagamento @Model.PagamentoID
                </div>
                <div class="card-body">
                    <h4 class="card-title">Dettagli</h4>
                    <p class="card-text fw-bold">Periodo Inizio: @Model.PeriodoPagamentoInizio.ToShortDateString()</p>
                    <p class="card-text fw-bold">Periodo Fine: @Model.PeriodoPagamentoFine.ToShortDateString()</p>
                    <p class="card-text fw-semibold">Ammontare: @Model.Ammontare</p>
                    <p class="card-text fw-semibold">Tipo: @Model.Tipo</p>
                    <p class="card-text fw-semibold">Dipendente ID: @Model.DipendenteID</p>
                </div>
            </div>

            <div class="mt-3">
                @Html.ActionLink("Edit", "Edit", new { id = Model.PagamentoID }, new { @class = "btn btn-outline-secondary" })
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-secondary" })
            </div>
        </div>
    </div>
</div>